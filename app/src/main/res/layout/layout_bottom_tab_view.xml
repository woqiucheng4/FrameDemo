<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <qc.com.framedemo.view.widget.BottomTabView
        android:id="@+id/bottom_tab_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:tabButtonTextColor="@color/tab_textcolor_selector"
        app:tabIcon="@drawable/tab_mine"
        app:tabText="@string/action_settings"/>

    <qc.com.framedemo.view.widget.BottomTabView
        android:id="@+id/bottom_tab_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:tabButtonTextColor="@color/tab_textcolor_selector"
        app:tabIcon="@drawable/tab_mine"
        app:tabText="@string/action_settings"/>

    <qc.com.framedemo.view.widget.BottomTabView
        android:id="@+id/bottom_tab_third"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:tabButtonTextColor="@color/tab_textcolor_selector"
        app:tabIcon="@drawable/tab_mine"
        app:tabText="@string/action_settings"/>

    <qc.com.framedemo.view.widget.BottomTabView
        android:id="@+id/bottom_tab_fourth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:tabButtonTextColor="@color/tab_textcolor_selector"
        app:tabIcon="@drawable/tab_mine"
        app:tabText="@string/action_settings"/>

</LinearLayout>
